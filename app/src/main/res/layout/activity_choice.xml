<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="X5浏览器"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/single_webView"
        app:layout_constraintRight_toLeftOf="@+id/single_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/single_webView"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="折线图"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/single_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="串口"
        app:layout_constraintTop_toBottomOf="@+id/single_webView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/usb"
        app:layout_constraintRight_toLeftOf="@+id/single_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toBottomOf="@+id/single_webView"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/usb"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="其他"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>